---
import Layout from "../layouts/Layout.astro";
import "../styles/global.css";
---

<Layout title="Reserva">
  <nav
    class="bg-[#1d1b12] py-4 px-12 text-yellow-400 uppercase"
    style="font-family: 'Noto Sans Variable', 'Noto Serif Variable', serif;"
  >
    <!-- Chevron -->
    <a href="/" class="flex items-center gap-2"
      ><svg
        xmlns="http://www.w3.org/2000/svg"
        width="24"
        height="24"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="icon icon-tabler icons-tabler-outline icon-tabler-chevron-left"
        ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
          d="M15 6l-6 6l6 6"></path></svg
      ><span
        class="font-medium"
        style="font-family: 'Noto Sans Variable', 'Noto Serif Variable', serif;"
        >ATRAS</span
      ></a
    >

    <div
      class="flex justify-center -mt-6"
      style="font-family: 'Noto Serif Variable', serif;"
    >
      <h1 class="text-2xl tracking-widest">RESTAURANTE LUXE</h1>
    </div>
    <hr />
  </nav>

  <!-- HEADER -->
  <section class="bg-[#1d1b12] py-8 flex justify-center">
    <!-- CONTENEDOR -->
    <div class="relative w-175 h-75 rounded-xl overflow-hidden shadow-2xl">
      <!-- IMAGEN -->
      <img
        src="https://media.istockphoto.com/id/2019308975/es/foto/disposici%C3%B3n-de-mesas.jpg?s=612x612&w=0&k=20&c=7dMq2GIsD9_MkftpdA0xrPmSWqHGrbdZhYmJy8YhndI="
        alt="Mesas del restaurante"
        class="w-full h-full object-cover"
      />

      <!-- OSCURECER IMAGEN -->
      <div class="absolute inset-0 bg-black/40"></div>

      <!-- TEXTO -->
      <div class="absolute top-6 left-6 text-white">
        <h1 class="text-2xl font-bold">Asegura tu mesa</h1>
        <p class="text-sm max-w-xs text-white/80">
          Reserva y vive una experiencia increíble.
        </p>
      </div>
    </div>
  </section>

  <section
    class="bg-[#1d1b12] py-12 flex justify-center"
    style="font-family: 'Noto Serif Variable', serif;;"
  >
    <div class="flex flex-col lg:flex-row gap-10 w-[90%] max-w-6xl text-white">
      <!-- IZQUIERDA -->
      <div class="lg:w-1/3 bg-white/10 p-6 rounded-xl">
        <h2 class="text-xl font-bold mb-4">Información</h2>
        <p>Dirección: <span class="text-yellow-400">Restaurante LUXE</span></p>
        <p>
          Horario <span class="block"
            >Lun - Jue: 5:00 PM - 10:00 PM Vie - Sáb: 4:30 PM - 11:30 PM Dom:
            4:30 PM - 9:00 PM
          </span>
        </p>
        <p class="mt-2">Notas <span class="block mt-2">Porfavor llega  10 minutos antes de tu reservación</span></p>
      </div>

      <!-- DERECHA -->
      <div class="lg:w-2/3 bg-white/10 p-6 rounded-xl">
        <h2 class="text-xl font-bold mb-4">Formulario</h2>

        <form class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <input
            class="p-2 rounded bg-black/40"
            placeholder="Nombre"
            required
          />
          <input
            class="p-2 rounded bg-black/40"
            placeholder="Correo"
            type="email"
            required
          />
          <input
            class="p-2 rounded bg-black/40 md:col-span-2"
            placeholder="Mensaje"
          />
          <button class="bg-yellow-400 text-black py-2 rounded md:col-span-2">
            Enviar
          </button>
        </form>
      </div>
    </div>
  </section>
</Layout>
