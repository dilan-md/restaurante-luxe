---
import { useState } from "react";
---

<nav
  class="flex items-center justify-between p-4 bg-[#12110a] text-white relative"
  style="font-family: 'Noto Serif Variable', serif;"
>
  <!-- Logo -->
  <a href="#" class="flex items-center text-2xl">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class="w-8 h-8 text-yellow-400 mr-2"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
    >
      <path d="M4 3h16" />
      <path d="M7 3v18" />
      <path d="M17 3v18" />
    </svg>
    RESTAURANTE LUXE
  </a>

  <!-- Links (solo desktop) -->
  <div class="hidden md:flex justify-center gap-6 flex-1">
    <a href="#historia" class="hover:text-yellow-400">Historia</a>
    <a href="#menu" class="hover:text-yellow-400">Menú</a>
    <a href="#contacto" class="hover:text-yellow-400">Contacto</a>
  </div>

  <!-- Botón reserva (solo desktop) -->
  <div class="hidden md:flex justify-end">
    <a
      href="/reserva"
      class="bg-yellow-400 hover:bg-yellow-600 px-4 py-2 rounded font-semibold text-black"
    >
      Reserva
    </a>
  </div>

  <!-- Hamburger (solo móvil) -->
  <button
    id="menu-btn"
    class="md:hidden text-yellow-400 text-3xl focus:outline-none"
  >
    ☰
  </button>
</nav>

<!-- Menú móvil -->
<div
  id="mobile-menu"
  class="hidden flex-col items-center gap-4 bg-[#12110a] text-white py-4 md:hidden"
>
  <a href="#historia" class="hover:text-yellow-400">Historia</a>
  <a href="#menu" class="hover:text-yellow-400">Menú</a>
  <a href="#contacto" class="hover:text-yellow-400">Contacto</a>
  <a
    href="/reserva"
    class="bg-yellow-400 hover:bg-yellow-600 px-4 py-2 rounded font-semibold text-black"
  >
    Reserva
  </a>
</div>

<hr class="opacity-50" />

<script>
  const btn = document.getElementById("menu-btn");
  const menu = document.getElementById("mobile-menu");

  btn.addEventListener("click", () => {
    menu.classList.toggle("hidden");
  });
</script>